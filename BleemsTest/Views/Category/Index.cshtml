@model BleemsTest.Models.Category

@{
    ViewData["Title"] = "Index";
    List<Category> categories = ViewBag.CategoryList;
}
@{
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.Message');
        </script>
    }
}

<h1>Category</h1>

<div>
    <h4>List Of Categories</h4>
    <hr />
    <div class="box">
        <div class="box-body">
            <table id="CateoryList" class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in categories)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
